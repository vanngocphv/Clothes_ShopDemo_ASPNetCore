@model Clothe
@{
    ViewData["Title"] = "Detail Product Page";
}
    <!-- ***** Main Banner Area Start ***** -->
    <div class="page-heading" id="top">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="inner-content">
                        <h2>Single Product Page</h2>
                        <span>Awesome &amp; Product you view is </span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ***** Main Banner Area End ***** -->


    <!-- ***** Product Area Starts ***** -->
    <section class="section" id="product">
        <div class="container">
            <div class="row">
                <div class="col-lg-8">
                <div class="left-images">
                    <img src="@Model.Image" alt="@Model.Name">
                    <img src="~/images/single-product-02.jpg" alt="">
                </div>
            </div>
            <div class="col-lg-4">
                <div class="right-content">
                    <h4>@Model.Name</h4>
                    <span class="price">$@Model.Price</span>
                    <input hidden id="idOneProduct" value="@Model.Id" />
                    <input hidden id="priceOneProduct" value="@Model.Price" />
                    <span>@Model.Description</span>
                    <div class="quote">
                        <i class="fa fa-quote-left"></i><p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiuski smod.</p>
                    </div>
                    <div class="quantity-content">
                        <div class="left-content">
                            <h6>No. of Orders</h6>
                        </div>
                        <div class="right-content">
                            <div class="quantity buttons_added">
                                <input type="button" value="-" class="minus" onclick="decreaseQuantityOrder()"><input type="number" id="quantityOrder" step="1" min="1" max="" name="quantity" value="1" title="Qty" class="input-text qty text" size="4" pattern="" inputmode=""><input type="button" value="+" class="plus" onclick="increaseQuantityOrder()">
                            </div>
                        </div>
                    </div>
                    <div class="total">
                        <h4 id="totalOrderOneProduct">Total: $<span id="totalProductPrice">@Model.Price.00</span></h4>
                        <div class="main-border-button"><button onclick="addToCart(@Model.Id, '@Model.Name', '@Model.Image', @Model.Price, 1)">Add To Cart</button></div>
                    </div>
                </div>
            </div>
            </div>
        </div>
    </section>
    <!-- ***** Product Area Ends ***** -->
