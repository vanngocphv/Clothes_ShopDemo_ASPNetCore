@{
    ViewData["Title"] = "Cart Page";
}
<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Your Cart</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<section class="section" id="cart">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h2>Your Cart's Items</h2>
                    <span>Checkout your purchase items</span>
                </div>
            </div>
        </div>
        <hr/>
        <div class="row customTitle">
            <div class="col-lg-3">
                <h4>Image</h4>
            </div>
            <div class="col-lg-3">
                <h4>Name</h4>
            </div>
            <div class="col-lg-3">
                <h4>Quantity</h4>
            </div>
            <div class="col-lg-3">
                <h4>Total</h4>
            </div>
        </div>
        <br/>
        <!-- All item order -->
        <div id="output-html">
            
        </div>
        <div class="row">
            <div class="col-md-6">

            </div>
            <div class="col-md-3">
                <h4 id="total-amount-products">Total Amount: $500</h4>
                <input type="text" id="total-amount" name="total-amount" hidden/>
            </div>
            <div class="col-md-3">
                <a class="btn btn-outline-primary" asp-controller="Cart" asp-action="Checkout">Checkout</a>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    <script src="~/js/OutputHtml.js"></script>
}
