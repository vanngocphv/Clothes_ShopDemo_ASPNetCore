@model Customer
@{
    ViewData["Title"] = "Checkout Page";
}

<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Checkout Form</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<!-- ***** Order Area Starts ***** -->
<div class="contact-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="section-heading">
                    <h2>Order Form</h2>
                    <span>Please give us your information to order.</span>
                </div>
                <form id="order-form" method="post">
                    <div class="row">
                        <div class="col-lg-6">
                            <fieldset>
                                <input asp-for="CustomerName" type="text" id="name" placeholder="Your name" required="">
                                <span style="color:red" asp-validation-for="CustomerName"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <input asp-for="CustomerEmail" type="text" id="email" placeholder="Your email" required="">
                                <span style="color:red" asp-validation-for="CustomerEmail"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-2" style="padding-top:1.5rem">
                            <span>Total:</span>
                        </div>
                        <div class="col-lg-10" style="padding-top:1rem">
                            <fieldset>
                                <input asp-for="TotalPurchase" type="text" id="total-amount" placeholder="0" readonly>
                                <span style="color:red" asp-validation-for="TotalPurchase"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <textarea asp-for="Message" rows="6" id="Message" placeholder="Your message"></textarea>
                            </fieldset>
                            <textarea asp-for="TotalProductPurchase" rows="6" id="order-products" placeholder="Your message" hidden></textarea>
                        </div>
                        <div class="col-lg-12">
                            <button id="submit" type="submit" class="main-dark-button"><i class="fa fa-shopping-cart"></i></button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-lg-6">
                <div id="map">
                    <img src="~/images/logo.png" width="100%" height="auto" frameborder="0" style="border:0" allowfullscreen />

                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Order Area Ends ***** -->

@section Scripts{
        <script src="~/js/SetOrderForm.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }
    <script type="text/javascript">
        $('#submit').on('click', function (e) {
            $('#order-form').validate();
            if ($('#order-form').valid() === true) {
                //active into database value
                localStorage.removeItem('product');
                $('#order-form').submit();
            } else {
                e.preventDefault();
                return false;
            }
        });
    </script>
}
