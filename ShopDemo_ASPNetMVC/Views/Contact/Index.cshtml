@model ContactMessage
@{
    ViewData["Title"] = "Contact Page";
}


<!-- ***** Main Banner Area Start ***** -->
<div class="page-heading about-page-heading" id="top">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="inner-content">
                    <h2>Contact Us</h2>
                    <span>Awesome, clean &amp; creative HTML5 Template</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- ***** Main Banner Area End ***** -->

<!-- ***** Contact Area Starts ***** -->
<div class="contact-us">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div id="map">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d90186.37207676383!2d-80.13495239500924!3d25.9317678710111!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x88d9ad1877e4a82d%3A0xa891714787d1fb5e!2sPier%20Park!5e1!3m2!1sen!2sth!4v1637512439384!5m2!1sen!2sth" width="100%" height="400px" frameborder="0" style="border:0" allowfullscreen></iframe>
                    <!-- You can simply copy and paste "Embed a map" code from Google Maps for any location. -->
                      
                </div>
            </div>
            <div class="col-lg-6">
                <div class="section-heading">
                    <h2>Say Hello. Don't Be Shy!</h2>
                    <span>Details to details is what makes Hexashop different from the other themes.</span>
                </div>
                <form id="contact" method="post" asp-controller="Contact" asp-action="SendContact">
                    <div class="row">
                        <div class="col-lg-6">
                            <fieldset>
                                <input asp-for="Name" type="text" id="name" placeholder="Your name" required="">
                                <span style="color:red" asp-validation-for="Name"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-6">
                            <fieldset>
                                <input asp-for="Email" type="text" id="email" placeholder="Your email" required="">
                                <span style="color:red" asp-validation-for="Email"></span>
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <textarea asp-for="Message" rows="6" id="message" placeholder="Your message" required=""></textarea>
                                <span style="color:red" asp-validation-for="Message"></span><br />
                                <span style="color:lightgray">Total Character: <span id="total-characters">0</span>/500</span>
                                
                            </fieldset>
                        </div>
                        <div class="col-lg-12">
                            <fieldset>
                                <button type="submit" id="form-submit" class="main-dark-button"><i class="fa fa-paper-plane"></i></button>
                            </fieldset>
                        </div>
                    </div>
                    </form>
            </div>
        </div>
    </div>
</div>
<!-- ***** Contact Area Ends ***** -->


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial"); 
    }
    <script type="text/javascript">
        $('#submit').on('click', function (e) {
            $('#contact-form').validate();
            if ($('#contact-form').valid() === true) {
                //active into database value
                $('#contact-form').submit();
            } else {
                e.preventDefault();
                return false;
            }
        });
        $('#message').on('input', function() {
            let totalMessageCharacter = document.getElementById('message').value.length;
            document.getElementById('total-characters').innerHTML = totalMessageCharacter;
        })



    </script>
}

